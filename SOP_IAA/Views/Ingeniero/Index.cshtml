@model IEnumerable<SOP_IAA_DAL.ingeniero>

@{
    ViewBag.Title = "Nuevo Ingeniero";
}

<h2></h2>

<p>
    @Html.ActionLink("Nuevo Ingeniero", "Create", null, new { @class = "btn btn-primary", @style = "width:150px" })
</p>
<br />
<div class="panel panel-default">
    <div class="panel-heading">
        Lista de Ingenieros
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table id="tbIngenieros" class="display">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.persona.nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.departamento) / Empresa
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.rol)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.descripcion)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.persona.nombre) @Html.DisplayFor(modelItem => item.persona.apellido1) @Html.DisplayFor(modelItem => item.persona.apellido2)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.departamento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.rol)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.descripcion)
                            </td>
                            <td align="center">
                                @Html.ActionLink("Editar", "Edit", new { id = item.idPersona }) |
                                @*@Html.ActionLink("Detalles", "Details", new { id = item.idPersona }) |*@
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.idPersona })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.panel-body -->
</div>

@section Scripts{
    <link rel="stylesheet" href="~/Content/jquery.dataTables.min.css" />
    <script src="~/Scripts/plugins/dataTables/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#tbIngenieros').dataTable({
                "language": {
                    "url": "/Scripts/plugins/dataTables/Spanish.txt"
                }
            });
        })
    </script>
}