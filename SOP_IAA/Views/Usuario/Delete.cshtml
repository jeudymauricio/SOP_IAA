@model SOP_IAA_DAL.usuario

@{
    ViewBag.Title = "Delete";
}

<h2> </h2>

<h3>¿Está seguro de eliminar este usuario?</h3>
<div>
    <h4> </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.nombreUsuario)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombreUsuario)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.tipo)
        </dt>

        @if (Model.tipo == 1)
        {
            <dd>Administrador</dd>
        }
        else if (Model.tipo == 2)
        {
            <dd>Asistente</dd>
        }
        else
        {
            <dd>Observador</dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.persona.nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.persona.nombre)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar Usuario" class="btn btn-danger" /> |
            @Html.ActionLink("Atrás", "Index")
        </div>
    }
</div>
