@model IEnumerable<SOP_IAA_DAL.laboratorioCalidad>

@{
    ViewBag.Title = "Laboratorios";
}

<!-- <h2>Index</h2> -->

<p>
    @Html.ActionLink("Nuevo Laboratorio", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tipo)
        </th>
