@model SOP_IAA_DAL.zona

@{
    ViewBag.Title = "Editar Rutas";
}

<h2>Agregar rutas a la zona</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { name = "formRutasAgregar", id = "formRutasAgregar" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <div>
            @Html.DropDownList("rutas", null, htmlAttributes: new { @class = "form-horizontal input-sm", @id = "ddlRutas" })
            <input class="btn btn-primary" type="button" id="btnAgregarRuta" value="Agregar Ruta" />
            <br /><br />
        </div>

        <!-- Panel que contendrá la tabla dinámica de rutas -->
        <div class="panel panel-default">
            <div class="panel-heading">
                Nuevas rutas de la zona
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table id="tbRutas" class="table">
                        <thead>
                            <tr>
                                <th>Ruta</th>
                                <th>Descripción</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Aqui se cargarán las filas dinámicamente con la información de las rutas -->
                            @foreach (var item in Model.ruta)
                            {
                                <tr id=@item.id>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.descripcion)
                                    </td>
                                    <td>
                                        <button class="remove btn btn-danger" onclick="eliminarRuta(@item.id, '@item.nombre')">Quitar Ruta</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar Cambios" class="btn btn-success" />
            </div>
        </div>

    </div>

    <p>
        @Html.ActionLink("Atrás", "RutasAsociadas", new { Model.id })
    </p>
}

@section Scripts {
    <script src="~/Scripts/Zona/ZonaRutasEditMethods.js"></script>
    <script src="~/Scripts/jquery-ui-1.11.1.js"></script>
    @** Función para el autocompletado del dropdown **@
    <link rel="stylesheet" href="~/Content/AutoCompleteComboBox.css">
    <script src="~/Scripts/AutoCompleteComboBox.js"></script>
    <script>
        $(function () {
            $("#ddlRutas").combobox();
        });
    </script>
}