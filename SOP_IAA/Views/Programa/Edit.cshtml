@model SOP_IAA_DAL.programa

@{
    ViewBag.Title = "Editar Programa";
}

<h2>Contratación @Model.Contrato.licitacion</h2>


@using (Html.BeginForm(null, null, FormMethod.Post, new { name = "formEditProgram", id = "formEditProgram" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Editar programa</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @*@Html.HiddenFor(model => model.id)*@

        @Html.HiddenFor(model => model.idContrato)
        @Html.HiddenFor(model => model.progProy.id)
        @Html.HiddenFor(model => model.trimestre)

        <div class="form-group">
            @Html.LabelFor(model => model.trimestre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.trimestre, new { htmlAttributes = new { @class = "form-control", @id = "editorTri" } })
                @Html.ValidationMessageFor(model => model.trimestre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ano, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ano, new { htmlAttributes = new { @class = "form-control", @id = "editorAno" } })
                @Html.ValidationMessageFor(model => model.ano, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.progProy.fechaInicio, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.progProy.fechaInicio, new { htmlAttributes = new { @class = "form-control", @id = "txtFechaInicio" } })
                @Html.ValidationMessageFor(model => model.progProy.fechaInicio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.progProy.fechaFin, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.progProy.fechaFin, new { htmlAttributes = new { @class = "form-control", @id = "txtFechaFin" } })
                @Html.ValidationMessageFor(model => model.progProy.fechaFin, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.progProy.monto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.progProy.monto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.progProy.monto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar Cambios" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Atrás", "MisProgramas", new { _id = Model.Contrato.id})
</div>

@section Scripts {
    @*@Scripts.Render("~/bundles/jqueryval")*@

    <script src="~/Scripts/Programa/EditMethods.js"></script>
}
