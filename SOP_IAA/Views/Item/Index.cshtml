@model IEnumerable<SOP_IAA_DAL.item>

@{
    ViewBag.Title = "Lista de Items";
}

<h2> </h2>

<p>
    @Html.ActionLink("Agregar Item", "Create", null, new { @class = "btn btn-primary", @style = "width:150px" })
</p>
<br/>
<div class="panel panel-default">
    <div class="panel-heading">
        Lista Global de Ítems
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table id="tbItems" class="display">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.codigoItem)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.descripcion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.unidadMedida)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.codigoItem)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.unidadMedida)
                            </td>
                            <td align="center">
                                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                                @*@Html.ActionLink("Detalles", "Details", new { id = item.id }) |*@
                                @Html.ActionLink("Borrar", "Delete", new { id = item.id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.panel-body -->
</div>

@section Scripts{
    <link rel="stylesheet" href="~/Content/jquery.dataTables.min.css" />
    <script src="~/Scripts/plugins/dataTables/jquery.dataTables.min.js"></script>
    
    <script>
        $(document).ready(function () {
            $('#tbItems').dataTable({
                "language": {
                    "url": "/Scripts/plugins/dataTables/Spanish.txt"
                }
            });
        });
        
        // Función de selecccionar las filas
        $('#tbItems tbody').on('click', 'tr', function () {
            $(this).toggleClass('selected');
        });

        // Muestra cuantas filas se han seleccionado
        $('#button').click(function () {
            alert(table.rows('.selected').data().length + ' row(s) selected');
        });
    </script>
}